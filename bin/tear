#!/bin/sh
# USAGE
# [-d <dir>] command args
# An executable and library manager
#
#   -d, --tear-dir <dir>    - override $TEARDIR
#
# Available commands:
# (NOTE: Use `help <command>` for detailed info)
#

. $(dirname $0)/tear-common

function commands() {
	for cmd in $(ls $base_dir/tear-*); do
		if test -x $cmd; then
			echo "$(cmdify $cmd)\t- $(desc $cmd)"
		fi
	done
}

USAGE2=$(commands)

args=""
while [ $# -gt 0 ]; do
case "$1" in
	-d|--tear-dir)
		test $# -lt 2 &&
			see_usage "missing argument for $1"
		export TEARDIR=$2
		shift; shift
		;;
	-h|--help)
		see_usage
		;;
	-*)
		see_usage "unknown option $1"
		;;
	*)
		break
		;;
esac
done

if test $# -gt 0; then
	command="$base_dir/tear-$1"; shift

	if ! test -f $command; then
		die "tear can't find $command"
	elif ! test -x $command; then
		die "$command is not executable"
	fi
	$command $@
else
	see_usage
fi
